{
    "compilerOptions": {
        "outDir": "./lib/",
        "rootDir": "./src",
        "strict": true,
        "skipLibCheck": true,
        "checkJs": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationMap": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "@types"
        ],
        "declarationDir": "./lib/types"
    },
    "exclude": ["./tests/*", "./coverage/*"],
    "include": ["./src", "./tests/*"],
}
